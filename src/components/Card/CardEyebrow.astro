---
interface Props {
  component?: string;
  class?: string;
  decorate?: boolean;
  dateTime?: Date;
}
const {
  dateTime,
  class: className,
  component: Component = "p",
  decorate = false,
} = Astro.props;
---

<Component
  class:list={[
    className,
    "relative z-10 order-first mb-3 flex items-center text-sm text-zinc-400 dark:text-zinc-500",
    decorate && "pl-3.5",
  ]}
  datetime={dateTime}
>
  {
    decorate && (
      <span
        class="absolute inset-y-0 left-0 flex items-center"
        aria-hidden="true"
      >
        <span class="h-4 w-0.5 rounded-full bg-zinc-200 dark:bg-zinc-500" />
      </span>
    )
  }
  <slot />
</Component>
