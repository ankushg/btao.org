---
interface Props {
  class?: string;
  large?: boolean;
}
const { class: className, large = false } = Astro.props;
---

<a href="/" aria-label="Home" class:list={[className, "pointer-events-auto"]}>
  <img
    src="/img/meirl.png"
    alt=""
    sizes={large ? "4rem" : "2.25rem"}
    class:list={[
      "rounded-full bg-zinc-100 object-cover dark:bg-zinc-800",
      large ? "h-16 w-16" : "h-9 w-9",
    ]}
  />
</a>
